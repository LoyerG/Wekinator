<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#2b2e30"
    tools:context="wekinator.epsi.com.wekinator.AddActivity">


    <TextView android:text="Ajouter un acteur" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <TextView android:text="Nom de l'acteur" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actorNameLabel"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:id="@+id/actorNameText"
        android:background="#bdc3c7"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>



    <TextView android:text="Question Ã  rajouter" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actorNewQuestionLabel"
        android:visibility="gone"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:id="@+id/actorNewQuestionText"
        android:visibility="gone"
        android:background="#bdc3c7"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>




    <TextView android:text="Reponse attendue
    \n1 = Oui, 5 = Non" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actorNewAnswerLabel"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:id="@+id/actorNewAnswerText"
        android:inputType="number"
        android:visibility="gone"
        android:background="#bdc3c7"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="#d35400"
        android:layout_marginTop="20dp"
        android:text="Suivant"
        android:onClick="actionButton"
        android:id="@+id/actionButton"
        android:layout_gravity="center"
        android:padding="5dp"/>

</LinearLayout>
